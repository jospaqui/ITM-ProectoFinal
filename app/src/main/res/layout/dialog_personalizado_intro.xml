<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00AF91"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="32dp" />

    <TextView
        android:id="@+id/text_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/gentium_basic_bold"
        android:gravity="center"
        android:text="@string/intro_pregunta"
        android:textColor="#ffcc29"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUserAgri"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/shape_cards"
        android:drawableTop="@drawable/granjero"
        android:fontFamily="@font/nunito_sans_bold"
        android:paddingTop="12dp"
        android:text="@string/soyagricultor"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/text_dialog" />

    <Button
        android:id="@+id/btnUserClasic"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/shape_cards"
        android:drawableTop="@drawable/comprador"
        android:fontFamily="@font/nunito_sans_bold"
        android:paddingTop="12dp"
        android:text="@string/soycomprador"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/btnUserAgri" />


</androidx.constraintlayout.widget.ConstraintLayout>