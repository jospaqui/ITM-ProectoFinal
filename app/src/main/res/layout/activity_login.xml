<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/textViewreg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btn_regresar_register"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_white"
        android:drawableStart="@drawable/ic_left"
        android:fontFamily="@font/nunito_sans_bold"
        android:gravity="start|center_vertical"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewreg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewreg"
        app:layout_constraintTop_toTopOf="@+id/textViewreg" />

    <TextView
        android:id="@+id/enunsolopaso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/nunito_sans_semibold"
        android:text="@string/loginconrrss"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewreg"
        app:layout_constraintStart_toStartOf="@+id/textViewreg"
        app:layout_constraintTop_toBottomOf="@+id/btn_regresar_register" />

    <Button
        android:id="@+id/btn_login_fb"
        android:layout_width="162dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/fb"
        app:layout_constraintStart_toStartOf="@+id/textViewreg"
        app:layout_constraintTop_toBottomOf="@+id/enunsolopaso" />

    <Button
        android:id="@+id/btn_login_g"
        android:layout_width="163dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="@string/google"
        app:layout_constraintEnd_toEndOf="@+id/textViewreg"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btn_login_fb"
        app:layout_constraintTop_toBottomOf="@+id/enunsolopaso" />

    <TextView
        android:id="@+id/contucorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:gravity="center|start"
        android:text="@string/concorreo"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textViewreg"
        app:layout_constraintStart_toStartOf="@+id/textViewreg"
        app:layout_constraintTop_toBottomOf="@+id/enunsolopaso" />

    <EditText
        android:id="@+id/et_userMail_cla"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/custom_imput"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="12dp"
        android:autofillHints="email"
        android:ems="10"
        android:hint="@string/et_email_login"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewreg"
        app:layout_constraintStart_toStartOf="@+id/textViewreg"
        app:layout_constraintTop_toBottomOf="@+id/contucorreo" />

    <EditText
        android:id="@+id/et_userPassword_cla"
        android:layout_width="356dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/custom_imput"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="@string/et_pass_login"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:autofillHints="password"
        app:layout_constraintEnd_toEndOf="@+id/textViewreg"
        app:layout_constraintStart_toStartOf="@+id/textViewreg"
        app:layout_constraintTop_toBottomOf="@+id/et_userMail_cla" />

    <Button
        android:id="@+id/btn_crear_cla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_main"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewreg"
        app:layout_constraintStart_toStartOf="@+id/textViewreg"
        app:layout_constraintTop_toBottomOf="@+id/et_userPassword_cla" />

    <TextView
        android:id="@+id/et_register_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:text="@string/sincuenta"
        app:layout_constraintEnd_toEndOf="@+id/textViewreg"
        app:layout_constraintStart_toStartOf="@+id/textViewreg"
        app:layout_constraintTop_toBottomOf="@+id/btn_crear_cla" />




</androidx.constraintlayout.widget.ConstraintLayout>